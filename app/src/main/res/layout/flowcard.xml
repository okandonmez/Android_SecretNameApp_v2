<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="260dp">
    <ImageView
        android:id="@+id/imgEvent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/flowdeneme"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/cardlocation"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:src="@drawable/flowgreen"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="95dp"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="26dp"
        android:src="@drawable/floworange"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ücretsiz"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="120dp"/>
    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topluluk"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/txtEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PotterHeads Buluşuyoruz"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/imgEvent"
        android:layout_marginStart="5dp"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#a80140"/>
    <TextView
        android:id="@+id/txtTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etkinlik Bitiş Tarihi : "
        android:textSize="16sp"
        android:layout_below="@+id/txtEventTitle"
        android:layout_marginStart="5dp"
        android:elevation="5dp"/>
    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 saat 25 dakika"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:layout_below="@id/txtEventTitle"
        android:layout_marginStart="150dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/attendbtn"/>



</RelativeLayout>